[Unit]
Description=Idle manager for Wayland
Documentation=man:swayidle(1)
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/swayidle -w \
            lock 'swaylock -f' \
            timeout 60 'swaylock -f' \
            before-sleep 'swaylock -f'
Restart=always
RestartSec=1

[Install]
WantedBy=sway-session.target
